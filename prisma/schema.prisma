generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  username  String   @unique
  profile   String?
  cover     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //Relations
  initiatedPayments Payment[] @relation(name: "initiation")
  receivedPayments  Payment[] @relation(name: "receive")
}

model Payment {
  id          String   @id @default(uuid())
  initiatorId String
  toUserId    String
  orderId     String
  message     String
  amount      String
  CreatedAt   DateTime @default(now())
  UpdatedAt   DateTime @updatedAt
  done        Boolean  @default(false)

  //relations
  initiator User @relation(name: "initiation", fields: [initiatorId], references: [id])
  toUser    User @relation(name: "receive", fields: [toUserId], references: [id])
}
